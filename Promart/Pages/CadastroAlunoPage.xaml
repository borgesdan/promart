<Page x:Class="Promart.Pages.CadastroAlunoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Promart.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1280"
      Title="CadastrarAlunoPage">

    <Grid Background="White" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="1200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Content="CADASTRO DO ALUNO"
               FontSize="24" FontWeight="Bold" FontFamily="Cascadia Code" />

        <Grid Grid.Row="1" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.Column="3" Grid.RowSpan="4" IsEnabled="True" Source="/Pages/face-128x128-1410033.png" 
                   />


            <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4"
                      Margin="10,0,10,0" Padding="5" Header="Dados Pessoais"
                      FontSize="20" FontFamily="Cascadia Code ExtraLight" FontStyle="Italic">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Nome Completo:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"                                
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Data Nascimento:"
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal" />
                    <DatePicker Grid.Row="1" Grid.Column="1"
                                Width="250" HorizontalAlignment="Left" VerticalAlignment="Center"
                                FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal" />
                    <Label Grid.Row="1" Grid.Column="1" Content="10 anos"
                           FontSize="14" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal" />
                    

                    <Label Grid.Row="2" Grid.Column="0" Content="RG:"
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal" />
                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                             HorizontalAlignment="Left" MinWidth="300" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light"  FontStyle="Normal" />

                    <Label Grid.Row="3" Grid.Column="0" Content="CPF:"
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal" />
                    <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                             HorizontalAlignment="Left" MinWidth="300" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal" />

                    <Label Grid.Row="4" Grid.Column="0" Content="Certidão de Nascimento:"
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal" />
                    <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                             HorizontalAlignment="Left" MinWidth="300" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal" />
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4"
                       Margin="10,0,10,0" Padding="5" Header="Família"
                      FontSize="20" FontFamily="Cascadia Code ExtraLight" FontStyle="Italic">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Vínculo Familiar" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Width="250" HorizontalAlignment="Left"
                              VerticalAlignment="Center" SelectedIndex="0" IsEditable="True"
                              FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ComboBoxItem Content="Pais" />
                        <ComboBoxItem Content="Avós" />
                        <ComboBoxItem Content="Somente a mãe" />
                        <ComboBoxItem Content="Somente o pai" />
                        <ComboBoxItem Content="Tios" />
                        <ComboBoxItem Content="Mãe e Padrasto" />
                        <ComboBoxItem Content="Pai e Madastra" />
                        <ComboBoxItem Content="Outro" />
                    </ComboBox>

                    <Label Grid.Row="1" Grid.Column="0" Content="Nome do Responsável" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"                        
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Recebe Bolsa Família?" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>
                    <CheckBox Grid.Row="2" Grid.Column="1" Content="Sim" 
                              VerticalAlignment="Center" FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Tipo de Moradia" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Width="350" HorizontalAlignment="Left"
                              VerticalAlignment="Center" SelectedIndex="0" IsEditable="True"
                              FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ComboBoxItem Content="Própria" />
                        <ComboBoxItem Content="Alugada" />
                        <ComboBoxItem Content="Cedida pela família" />
                        <ComboBoxItem Content="Cedida pelo empregador" />
                        <ComboBoxItem Content="Cedida de outra forma" />
                        <ComboBoxItem Content="Outra Forma" />
                    </ComboBox>

                </Grid>

            </GroupBox>

            <GroupBox Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="4"
                       Margin="10,0,10,0" Padding="5" Header="Contatos"
                      FontSize="20" FontFamily="Cascadia Code ExtraLight" FontStyle="Italic">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="1" Grid.Column="0" Content="Telefone 1:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="1" Grid.Column="1" 
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Telefone 2:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="3" Grid.Column="1"
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="4"
                       Margin="10,0,10,0" Padding="5" Header="Dados Escolares"
                      FontSize="20" FontFamily="Cascadia Code ExtraLight" FontStyle="Italic">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                        
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Nome da Escola:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="0" Grid.Column="1"
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Turno Escolar:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <ComboBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"
                              VerticalAlignment="Center" SelectedIndex="0" IsEditable="True"
                              FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ComboBoxItem Content="Matutino" />
                        <ComboBoxItem Content="Vespertino" />
                        <ComboBoxItem Content="Noturno" />
                        <ComboBoxItem Content="Integral" />
                    </ComboBox>

                    <Label Grid.Row="2" Grid.Column="0" Content="Ano Escolar:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <ComboBox Grid.Row="2" Grid.Column="2" Width="200" HorizontalAlignment="Left"
                              VerticalAlignment="Center" SelectedIndex="0" IsEditable="True"
                              FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ComboBoxItem Content="1º Ano" />
                        <ComboBoxItem Content="2º Ano" />
                        <ComboBoxItem Content="3º Ano" />
                        <ComboBoxItem Content="4º Ano" />
                        <ComboBoxItem Content="5º Ano" />
                        <ComboBoxItem Content="6º Ano" />
                        <ComboBoxItem Content="7º Ano" />
                        <ComboBoxItem Content="8º Ano" />
                        <ComboBoxItem Content="9º Ano" />
                        <ComboBoxItem Content="1º Ano Ens. Médio" />
                        <ComboBoxItem Content="2º Ano Ens. Médio" />
                        <ComboBoxItem Content="3º Ano Ens. Médio" />
                        <ComboBoxItem Content="4º Ano Ens. Médio" />
                        
                    </ComboBox>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="4"
                       Margin="10,0,10,0" Padding="5" Header="Endereço"
                      FontSize="20" FontFamily="Cascadia Code ExtraLight" FontStyle="Italic">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Rua:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="0" Grid.Column="1"
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="0" Grid.Column="2" Content="Bairro:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <ComboBox Grid.Row="0" Grid.Column="3" Width="200" HorizontalAlignment="Left"
                              VerticalAlignment="Center" SelectedIndex="0" IsEditable="True"
                              FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ComboBoxItem Content="Bairro 1" />
                        <ComboBoxItem Content="Bairro 2" />
                        <ComboBoxItem Content="Bairro 3" />
                        <ComboBoxItem Content="Bairro 4" />
                    </ComboBox>

                    <Label Grid.Row="1" Grid.Column="0" Content="Número:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="1" Grid.Column="1" Width="100"
                             HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="1" Grid.Column="2" Content="Complemento:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="1" Grid.Column="3" Width="200"
                             HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Cidade:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="2" Grid.Column="1" 
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"
                             Text="Ipiaú" />

                    <Label Grid.Row="2" Grid.Column="2" Content="Estado:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="2" Grid.Column="3" Width="200"
                             HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"
                             Text="Bahia" />

                    <Label Grid.Row="3" Grid.Column="0" Content="CEP:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="3" Grid.Column="1" 
                             HorizontalAlignment="Stretch" TextAlignment="Left" VerticalAlignment="Center"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal"
                             Text="45570-000" />
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="10"
                       Margin="10,0,10,0" Padding="5" Header="Dados do Projeto"
                      FontSize="20" FontFamily="Cascadia Code ExtraLight" FontStyle="Italic">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Situação:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="200"
                              VerticalAlignment="Center" SelectedIndex="0"
                              FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ComboBoxItem Content="Aprovado" />
                        <ComboBoxItem Content="Em Espera" />
                        <ComboBoxItem Content="Matriculado" />
                        <ComboBoxItem Content="Não Aprovado" />
                        <ComboBoxItem Content="Desistente" />
                    </ComboBox>

                    <Label Grid.Row="1" Grid.Column="0" Content="Turno:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <ComboBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"
                              VerticalAlignment="Center" SelectedIndex="0" IsEditable="True"
                              FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ComboBoxItem Content="Matutino" />
                        <ComboBoxItem Content="Vespertino" />
                    </ComboBox>

                    <Label Grid.Row="3" Grid.Column="0" Content="Oficinas:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>
                    <ListBox Grid.Row="3" Grid.Column="1" Grid.RowSpan="5"
                             FontSize="15" FontFamily="Cascadia Code Light" FontStyle="Normal">
                        <ListBoxItem>
                            <CheckBox Content="Reforço Escolar" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Balé" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Informática" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Libras" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Espanhol" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Violão" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Flauta" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Orientação para vida" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="Educação Física" />
                        </ListBoxItem>
                    </ListBox>

                    <Button  Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                             Content="Exibir Controle de Faltas" 
                             FontSize="15" FontWeight="Bold" FontFamily="Cascadia Code" FontStyle="Normal"/>

                    <Label Grid.Row="0" Grid.Column="2" Content="Observações:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" FontStyle="Normal"/>

                    <TextBox Grid.Row="1" Grid.Column="2" Grid.RowSpan="14" Grid.ColumnSpan="2"
                               Margin="10" FontSize="16" FontFamily="Cascadia Code Light" FontStyle="Normal" 
                             AcceptsReturn="True" TextWrapping="WrapWithOverflow"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Page>
