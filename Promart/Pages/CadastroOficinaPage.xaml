<Page x:Class="Promart.Pages.CadastroOficinaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Promart.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CadastroOficinaPage">

    <Grid Background="White" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="1200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Content="CADASTRO DE OFICINAS"
               FontSize="24" FontWeight="Bold" FontFamily="Cascadia Code" />

        <Grid Grid.Row="1" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />                
                <RowDefinition Height="50" />                
            </Grid.RowDefinitions>

            <GroupBox Header="Lista de Oficinas"
                      Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="12"
                      Margin="10" Padding="5"
                      FontSize="20" FontFamily="Cascadia Code ExtraLight" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <ToolBar Grid.Row="0">
                        <Button VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="30"
                                BorderThickness="1" BorderBrush="Black"
                                FontSize="16" FontFamily="Cascadia Code"
                                Content="a" Cursor="Hand"></Button>

                        <Label Content="Procurar:" FontSize="12" FontFamily="Cascadia Code Light"
                               Margin="10, 0, 0, 0" HorizontalAlignment="Left" 
                               />
                        <TextBox FontSize="16" FontFamily="Cascadia Code" Width="150"
                                 Margin="10, 0, 0, 0" HorizontalAlignment="Left" 
                                 />

                        <Button VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="30"
                                Margin="10, 0, 0,0"
                                BorderThickness="1" BorderBrush="Black"
                                FontSize="16" FontFamily="Cascadia Code"
                                Content="ex" Cursor="Hand"></Button>
                    </ToolBar>

                    <ListBox Grid.Row="1" FontSize="20" FontFamily="Cascadia Code"
                             Margin="0, 10, 0, 0" Cursor="Hand">
                        <ListBoxItem Content="Reforço Escolar" />
                        <ListBoxItem Content="Balé" />
                        <ListBoxItem Content="Informática" />
                        <ListBoxItem Content="Libras" />
                        <ListBoxItem Content="Espanhol" />
                        <ListBoxItem Content="Violão" />
                        <ListBoxItem Content="Flauta" />
                        <ListBoxItem Content="Orientação para a vida" />
                        <ListBoxItem Content="Educação Física" />
                    </ListBox>                                       
                </Grid>
            </GroupBox>

            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="12">
                <GroupBox Header="Adicionar Oficina"
                      Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="12"
                      Margin="10" Padding="5"
                      FontSize="20" FontWeight="Bold" FontFamily="Cascadia Code" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>


                        <Label Grid.Row="0" Grid.Column="0" Content="Nome da Oficina:" 
                           FontSize="16" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"
                             HorizontalAlignment="Stretch" TextAlignment="Left" 
                                 Margin="10" VerticalContentAlignment="Center"
                                 FontSize="15" FontFamily="Cascadia Code Light" />

                        <Label Grid.Row="1" Grid.Column="0" Content="Descrição:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2"
                             HorizontalAlignment="Stretch" TextAlignment="Left" Margin="10" 
                                 AcceptsReturn="True" TextWrapping="WrapWithOverflow"
                                 FontSize="15" FontFamily="Cascadia Code Light" />

                        <Label Grid.Row="3" Grid.Column="0" Content="Oficina Ativa?:" 
                           FontSize="16" FontWeight="Bold" FontFamily="Cascadia Code" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <CheckBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                             HorizontalAlignment="Stretch" Content="Sim, a oficina está sendo ofertada."
                                  VerticalAlignment="Center" Margin="10,0,0,0"
                                 FontSize="16" FontFamily="Cascadia Code Light" IsChecked="True" />

                        <Button Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"
                                Content="ADICIONAR" Margin="20,0,20,0"
                                FontSize="20" FontFamily="Cascadia Code"></Button>

                        <Button Grid.Row="5" Grid.Column="1"
                                Content="Cancelar" Margin="20,5,20,5"
                                FontSize="20" FontFamily="Cascadia Code Light"></Button>

                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
