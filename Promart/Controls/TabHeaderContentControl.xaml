<UserControl x:Class="Promart.Controls.TabHeaderContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Promart.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="TitleLabel" Grid.Column="0" Content="Nova Aba" VerticalContentAlignment="Center" VerticalAlignment="Center" />
        <Button x:Name="CloseButton" Grid.Column="1" Content="X" Width="20" Height="15" VerticalContentAlignment="Center" 
                FontSize="8" FontWeight="Bold" 
                Foreground="White" Background="DarkRed"
                BorderBrush="Transparent"/>
    </Grid>
</UserControl>
