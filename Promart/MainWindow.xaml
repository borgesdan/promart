<Window x:Class="Promart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Promart"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="1280" MinHeight="720" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"  />
            <RowDefinition Height="30"  />
            <RowDefinition Height="*"  />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" VerticalContentAlignment="Center">
            <MenuItem Header="Arquivo" />
            <MenuItem Header="Cadastro">
                <MenuItem Header="Cadastrar Aluno" />
                <MenuItem Header="Cadastrar Voluntário" />
                <MenuItem Header="Cadastrar Oficina" />
            </MenuItem>
            <MenuItem Header="Consultar">
                <MenuItem Header="Consultar Alunos" />
                <MenuItem Header="Consultar Voluntários" />
                <MenuItem Header="Consultar Oficinas" />
            </MenuItem>
        </Menu>
        <ToolBar x:Name="MenuFerramentas" Grid.Row="1">
            <Button x:Name="CadastrarAlunoBtn" Width="35" VerticalAlignment="Stretch" Content="+A" />
            <Button x:Name="CadastrarVoluntárioBtn" Width="35" VerticalAlignment="Stretch" Content="+V" />
            <Button x:Name="CadastrarOficinaBtn" Width="35" VerticalAlignment="Stretch" Content="+O" />
            <Separator />
            <Label Content="Pesquisa Rápida" />
            <TextBox Width="250" />
            <Button Width="35" VerticalAlignment="Stretch" Content="Lupa" />
        </ToolBar>
        <TabControl x:Name="TabConteudo" Grid.Row="2">
            <TabItem Header="Teste">
                <ScrollViewer>
                    <Frame x:Name="ConteudoFrame">

                    </Frame>
                </ScrollViewer>                
            </TabItem>
        </TabControl>

        <Rectangle x:Name="PopupBackRectangle" Grid.RowSpan="3" Fill="Black" Opacity=".5" Visibility="Hidden"></Rectangle>
    </Grid>
</Window>
