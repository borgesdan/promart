<Window x:Class="Promart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Promart"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="1280" MinHeight="720" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"  />
            <RowDefinition Height="50"  />
            <RowDefinition Height="*"  />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" VerticalContentAlignment="Center">
            <MenuItem Header="Arquivo" />
            <MenuItem Header="Cadastro">
                <MenuItem x:Name="CadastrarAlunoMenu" Header="Cadastrar Aluno" />
                <MenuItem x:Name="CadastrarVoluntarioMenu" Header="Cadastrar Voluntário" />
                <MenuItem x:Name="CadastrarOficinaMenu" Header="Cadastrar Oficina" />
                <Separator />
                <MenuItem x:Name="ConsultaAvancadaMenu" Header="Consulta Avançada" />
            </MenuItem>            
        </Menu>
        <ToolBar x:Name="MenuFerramentas" Grid.Row="1">
            <Button x:Name="CadastrarAlunoBtn" Width="35" VerticalAlignment="Stretch" Content="+A" />
            <Button x:Name="CadastrarVoluntarioBtn" Width="35" VerticalAlignment="Stretch" Content="+V" />
            <Button x:Name="CadastrarOficinaBtn" Width="35" VerticalAlignment="Stretch" Content="+O" />
            <Separator />
            <Label Content="Pesquisa Rápida" VerticalAlignment="Center" />
            <TextBox Width="250" />
            <Button Width="35" VerticalAlignment="Stretch" Content="Lupa" />
        </ToolBar>
        <TabControl x:Name="TabConteudo" Grid.Row="2">
        </TabControl>

        <Rectangle x:Name="PopupBackRectangle" Grid.RowSpan="3" Fill="Black" Opacity=".5" Visibility="Hidden"></Rectangle>
    </Grid>
</Window>
