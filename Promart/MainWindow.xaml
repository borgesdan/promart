<Window x:Class="Promart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Promart"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="1280" MinHeight="720" WindowState="Maximized" FontFamily="Cascadia Code Light" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"  />
            <RowDefinition Height="50"  />
            <RowDefinition Height="*"  />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" VerticalContentAlignment="Center">
            <MenuItem Header="Arquivo" />
            <MenuItem Header="Cadastro">
                <MenuItem x:Name="CadastrarAlunoMenu" Header="Alunos" />
                <MenuItem x:Name="CadastrarVoluntarioMenu" Header="Voluntários" />
                <MenuItem x:Name="CadastrarOficinaMenu" Header="Oficinas" />
                <Separator />
                <MenuItem x:Name="ConsultaAvancadaMenu" Header="Consulta Avançada" />
            </MenuItem>            
        </Menu>
        <ToolBar x:Name="MenuFerramentas" Grid.Row="1" FontSize="14">
            <Button x:Name="CadastrarAlunoBtn" Width="35" VerticalAlignment="Stretch" Content="+A"
                    Margin="5,5" BorderBrush="Gray" BorderThickness="1" 
                    FontFamily="Cascadia Code SemiBold" FontSize="18"
                    ToolTip="Cadastrar Aluno">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.5">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FF00BCFB" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="CadastrarVoluntarioBtn" Width="35" VerticalAlignment="Stretch" Content="+V" 
                    Margin="5,5" BorderBrush="Gray" BorderThickness="1"  
                    FontFamily="Cascadia Code SemiBold" FontSize="18" 
                    ToolTip="Cadastrar Voluntário" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.5">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFFB0000" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="OficinasBtn" Width="35" VerticalAlignment="Stretch" Content="O"
                    Margin="5,5" BorderBrush="Gray" BorderThickness="1" 
                    FontFamily="Cascadia Code SemiBold" FontSize="18"
                    ToolTip="Cadastrar Aluno">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.5">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FF00BCFB" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Separator Margin="20,0" />
            <Label Content="Pesquisa Rápida" VerticalAlignment="Center" Margin="0,0"/>
            <TextBox Width="250" />
            <Button Width="35" VerticalAlignment="Stretch" Content="Lupa" 
                    Margin="5,5" 
                    BorderBrush="Gray" BorderThickness="1" />
            <Button x:Name="AbrirTabelaDadosButton" Width="35" VerticalAlignment="Stretch" Content="Lupa" 
                    Margin="5,5" 
                    BorderBrush="Gray" BorderThickness="1" />
        </ToolBar>
        <TabControl x:Name="TabConteudo" Grid.Row="2">
        </TabControl>
    </Grid>
</Window>
